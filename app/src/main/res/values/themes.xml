<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SBaby" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/custom_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="BottonBlueStyle">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="BottonRedStyle">
        <item name="android:layout_margin">7dp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="RedHugeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/custom_white</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="TextTaskTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>

    <style name="TextTaskStatus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextTaskBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>

    <style name="TextGiftBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>
    <style name="TextGiftPlusBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">150sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>

    <style name="TextTaskMoney">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>


    <style name="TextDoneButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextUnDoneButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextPremium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_white</item>
