    <style name="LargeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/custom_black</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <style name="MediumTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/custom_black</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cardBackgroundColor">@color/yellow</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

</resources>