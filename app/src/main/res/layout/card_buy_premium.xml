<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="40dp"
    android:layout_marginVertical="150dp"
    android:minWidth="330dp"
    android:minHeight="300dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="-25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fox_premium_dialog" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="25dp"
        app:cardBackgroundColor="@color/custom_white"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="-1dp"
        app:strokeColor="@color/red"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                style="@style/BuyPremiumText"
                android:layout_marginBottom="40dp"
                android:text="@string/premium"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_heart" />

                <TextView
                    style="@style/BuyPremiumText"
                    android:text="@string/add_free"
                    android:textSize="21sp" />
            </LinearLayout>

            <Button
                style="@style/BottonRedStyle"
                android:layout_marginBottom="22dp"
                android:text="29,99 $/ year" />

            <Button
                style="@style/BottonRedStyle"
                android:text="9,99 $/ month" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
