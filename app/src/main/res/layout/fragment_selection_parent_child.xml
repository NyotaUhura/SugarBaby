<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_brown">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        android:layout_marginTop="-15dp"
        android:layout_width="411dp"
        android:layout_height="353dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            style="@style/TextTaskTitle"
            tools:text="Welcome to SBaby!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            tools:text="This app is ideal for kids and parents who want to interact and complete tasks in a playful way" />
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/child"
        android:layout_width="332dp"
        android:layout_height="78dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="412dp"
        app:cardBackgroundColor="@color/brown"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/child_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/child_text"
                    android:layout_width="191dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="571dp"
                    android:textColor="@color/custom_white"
                    tools:text="I'm a child"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/child_done_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="100dp"
                    android:layout_marginStart="250dp"
                    android:background="@drawable/ic_edit_task"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/parent"
        android:layout_width="332dp"
        android:layout_height="78dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="547dp"
        app:cardBackgroundColor="@color/brown"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/parent_text"
                android:layout_width="191dp"
                android:layout_height="63dp"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="571dp"
                android:textColor="@color/custom_white"
                tools:text="I'm a child"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/parent_done_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginStart="250dp"
                android:background="@drawable/ic_edit_task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>