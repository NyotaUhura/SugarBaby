<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        android:layout_width="411dp"
        android:layout_height="215dp"
        android:layout_marginTop="-15dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/parent_button"
            style="@style/TextTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Parent" />

        <TextView
            android:id="@+id/top_info"
            style="@style/TextTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="120dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Welcome to SBaby!" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top">

        <androidx.cardview.widget.CardView
            android:id="@+id/email"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:layout_marginTop="70dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius">

            <EditText
                android:id="@+id/email_enter_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name:"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:singleLine="true" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/password"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius">

            <EditText
                android:id="@+id/password_enter_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password:"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:singleLine="true" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/log_in"
            android:layout_width="272dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/custom_white"
            app:cornerRadius="@dimen/corner_radius"
            tools:text="@string/login_in" />

        <TextView
            android:id="@+id/task_body_text"
            style="@style/TextTaskBody"
            android:layout_width="196dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            tools:text="I do not have an account" />

        <Button
            android:id="@+id/sign_up"
            android:layout_width="191dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/brown"
            android:textColor="@color/custom_white"
            app:cornerRadius="@dimen/corner_radius"
            tools:text="@string/sing_up" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>